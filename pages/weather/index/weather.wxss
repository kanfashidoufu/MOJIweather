.container {
  height: 250%;
  width: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}


.imageClass {
  width: 100%;
  height: 250%;
  filter: blur(1px);
  position: absolute;
  z-index: -1;
  overflow: hidden;
}
 .weatherIcon {
  margin-top: 100rpx;
  position: absolute;
} 
.PicSize {
  width:81rpx;
  height:81rpx;
}
  /* .weatherText {
  margin-right: 10rpx;
} */
  
.header {
  padding: 20rpx;
  height: 400rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.header-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.header-condition {
  padding-bottom: 150rpx;
  padding-left: 100rpx;
  padding-right: 260rpx;
  display: flex;
  align-self: flex-end;
  align-items: center;
  flex-direction: column;
  justify-content: flex-end;
}

#temp {
  color: #000000;
  margin-top: 100rpx;
  margin-bottom: 20rpx;
  font-size: 100rpx;
}

.header view {
  color: #000000;
  font-size: 30rpx;
}
.sunriseComp {
  position: relative;
  display: flex;
  height: 50rpx;
  margin-left: 50rpx;
}
.sunrise {
  color: #000000;
  font-size: 30rpx;
}
.sunriseImg {
  width:25px;
  height:25px;
}
.wind {
  margin-left: 180rpx;
  color: #000000;
  font-size: 30rpx;
}
.windImage {
  width:25px;
  height:25px;
}
.item-list {
  padding: 20rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  /* background: rgba(0, 0, 0, 0.2); */
  border-radius: 100rpx;
}

.daily-item {
  font-size: 30rpx;
  color: #000000;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.air-list {
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-top: 60rpx;
  margin-bottom: 40rpx;
  display: flex;
  height: 100px;
  color: #000000;
  font-size: 30rpx;
  align-items: center;
  flex-direction: row;
  justify-content: space-around;
  /* background: rgba(0, 0, 0, 0.2); */
  border-radius: 3rpx;
}

.air-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.air-item view {
  margin: 20rpx;
}

.life-suggestion {
  color: #000000;
  padding: 50rpx;
  font-size: 30rpx;
  margin-top: 40rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  /* background: rgba(0, 0, 0, 0.2); */
  border-radius: 3rpx;
}

.life-suggestion text {
  margin-top: 20rpx;
  font-style: oblique;
}

